<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/actor</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:fontFamily">@font/actor</item>

    </style>

    <style name="TitleTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat_alternates</item>
        <item name="android:textColor">@color/project_blue</item>
    </style>



    <style name="AppToolbar" parent="AppTheme">
        <!--<item convertCode="android:textAllCaps">false</item>-->
        <item name="actionMenuTextColor">@color/project_green</item>
        <item name="actionMenuTextAppearance">@style/AppBarTextTitle</item>

    </style>

    <style name="toolbarStyle" parent="AppTheme">
        <!--<item convertCode="android:titleTextStyle">@style/AppBarTextTitle</item>-->
        <!--<item convertCode="android:textColor">@android:color/black</item>-->

    </style>

    <style name="AppBarTextTitle" parent="TextAppearance.AppCompat.Title">
        <item name="actionMenuTextColor">@color/project_green</item>

    </style>

    <style name="actionBtnStyle" parent="@style/Widget.AppCompat.ActionButton">


    </style>

    <style name="currencyInputStyle">
        <item name="android:textSize">@dimen/dimen_edittxt_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/faded_text_colour</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
